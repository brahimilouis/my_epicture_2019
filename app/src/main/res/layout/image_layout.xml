<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="440dp" tools:layout_editor_absoluteY="81dp">


    <!--
    container for the returned imgur images
-->
    <androidx.cardview.widget.CardView
        android:id="@+id/PictureContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#D1CECE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--
    Images description
-->


        <TextView
            android:id="@+id/imageTitle"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:background="#000000"
            android:scaleType="fitCenter"
            android:text="TextView"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="14sp"
            android:textStyle="bold|italic"
            app:fontFamily="serif-monospace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--
    imgur images
-->

        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="60dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher"
            tools:context="com.appsdeveloperblog.kotlinexample4.LoadGifFromURLUsingGlide" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>